node {
    checkout scm
    docker.image('maven:3.5.4-alpine').inside('-v /root/.m2:/root/.m2') {
        stage('Build') {
            sh 'mvn -B -DskipTests clean package'
        }
        stage('Test') {
            sh 'mvn test'
        }
        stage('Deliver') {
            sh './jenkins/scripts/deliver.sh'
        }
    }
    docker.image('instrumentisto/rsync-ssh').inside('-v $PWD:/volume') {
        stage('Deploy') {
            withCredentials([
                    sshUserPrivateKey(credentialsId: 'root', keyFileVariable: 'secret')
                ]) {
                    sh "echo ${secret} | tr -d '\r' | ssh-add -"
                    sh "mkdir -p ~/.ssh"
                    sh "chmod 700 ~/.ssh"
                    sh "scp -i id_rsa -o StrictHostKeyChecking=no /volume/target/my-app-1.0-SNAPSHOT.jar ubuntu@tkjpedia.com:workspace/dicoding/tmp"
                }
        } 
    }
}